<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="mysteries-block">
<div class="mysteries">
  {{#each trips}}
  {{#if this.tickets}}
  <div class="mystery" onclick="location.href='/trips/buy/{{this.id}}'">
    {{else}}
    <div class="mystery">
      {{/if}}
      <img class="mystery-img" src="/images/mystery-img.jpg" alt="">
      <h4>{{this.name}}</h4>
      {{#if this.tickets}}
      <p>{{this.tickets}} tickets left!</p>
      {{else}}
      <p>No tickets left...</p>
      {{/if}}
      <p>OR: {{this.from}}</p>
      <p>Depart: {{formatDate this.depart}} </p>
      <p>Return: {{formatDate this.return}} </p>
      <div class="stars">
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
      </div>
      <p>Price: {{this.price}}â‚¬ </p>
    </div>
    {{/each}}
  </div>
</div>
</div>

