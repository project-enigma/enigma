
 <div class="login">
  <div class="login-form">
    <img class="logo-login-signup" src="../images/enigma-logo-white.svg" alt="">
    
    <form action="/auth/login" method="POST" id="form-container">

    
     <div class="imput-box">
      <input class="imput" id="username" type="text" name="username" placeholder="username">

      <br><br>

      <input class="imput" id="password" type="password" name="password" placeholder="Password">
    </div>
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br><br>

      <a href="/"><button class="btn-login-signup">Login</button></a>

      
    </form>
    
  </div>
  <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
</div>