{{> myAside }}

<section>
  <form action="" method="post">
    <div>
      <label>Find friend</label>
      <input type="text" name="friendUsername">
      {{#if error }}
      <div class="error-message">{{ error }}</div>
      {{/if}}
      <input type="text" name="userid" value="{{user.id}}" hidden>
      <input type="submit" value="Add">
    </div>
  </form>

  {{#each myUser.friends}}
  <img src="{{this.imgPath}}" alt="" style="width:100px;height:100px;">
  <p>{{this.username}}</p>

  <form action="/social/deleteFriend" method="post">
    <input type="text" name="friendId" value="{{this.id}}" hidden>
    <input type="text" name="friendName" value="{{this.username}}" hidden>
    <input type="submit" value="Delete">
  </form>

  {{/each}}
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>